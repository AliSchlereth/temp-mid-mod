<h2><%= current_user.first_name %> <%= current_user.last_name %>'s Links</h2>
<%= form_for @link do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.submit "Add Link" %>
<% end  %>

  <div class="row">
    <div class="col-md-2">Title </div><div class="col-md-4">URL</div><div class="col-md-2">Status</div>
  </div><hr/>
  <% current_user.links.each do |link| %>
  <div class="row">
    <div class="col-md-2"><%= link.title %></div> <div class="col-md-4"><%= link.url %></div> <div class="col-md-2"><%= link_to "Mark as Read", "" %></div>
  </div>
  <% end  %>
