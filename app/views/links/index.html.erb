<h2><%= current_user.first_name %> <%= current_user.last_name %>'s Links</h2>
<%= form_for @link do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.submit "Add Link" %>
<% end  %>

<%= current_user.links.each do |link| %>
  <%= link.title %> <%= link.url %> <%= link_to "Mark as Read", "" %>
<% end  %>
